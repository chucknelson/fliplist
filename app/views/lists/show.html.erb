<div id="list-container">

	<h1><%= @list.title %></h1>
	<!-- <p><%= @list.description %></p> -->

	<% if !@list.items.empty? %>
		<%= render 'items/items' %>
		<%= link_to 'Mark All Items as Complete', user_list_complete_all_path(@user, @list), method: :patch, data: { confirm: 'Are you sure?' }, :class => 'link-button' %> 
	<% end %>

	<%= render 'items/form' %>

	<%= link_to 'Edit List', edit_user_list_path(@user, @list) %> | 
	<%= link_to 'Delete List', user_list_path(@user, @list), method: :delete, data: { confirm: 'Are you sure?' } %>
	
	<p><%= link_to 'Back', user_lists_path(@user) %></p>

</div>
