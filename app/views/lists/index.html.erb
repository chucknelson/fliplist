<h1>Your Lists</h1>


<div id="list-container">
	
	<div id="list-header">
		<h2>Lists</h2>
	</div>

	<div id="list-body">
		<% if !@lists.empty? %>
			<ul>
				<% @lists.each do |list| %>
					<li data-list-id="<%=h list.id %>" class="<%= 'completed-list' if list.completed? %>">
						<div class="list-name">
							<%= link_to list.title, user_list_path(@user, list) %>
						</div>
						<div class="list-items-remaining">
							<%= list.items_remaining %> items remaining
						</div>
					</li>
				<% end %>
			</ul>
		<% end %>
	</div>

	<div id="list-footer">
		<p><%= link_to 'Create a New List', new_user_list_path(@user) %></p>
		<p><%= link_to 'Back', root_path %></p>
	</div>
	
</div>

