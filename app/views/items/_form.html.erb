<li id="new-item" class="nosort <%= 'hidden' if !@item_focus %>">
	<%= form_for [@user, @list, @list.items.build] do |f| %>
		<div id="new-item-text-container">
			<%= f.text_field :name, :autofocus => @item_focus %>
		</div>
		<div id="new-item-button-container">
			<%= f.submit 'Add Item' %>
		</div>
	<% end %>
</li>